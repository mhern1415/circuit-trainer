<h1 class="text-center">Add Your Circuit Here</h1>

<div class="text-center">
<%= form_for @circuit do |f| %>

<%= f.label :date %>
<%= f.date_field :date %>
<br></br>

<%= f.label :category %>
<%= f.select :category,options_for_select(["Low Intensity", "Medium Intensity", "High Intensity", "Marathon Training"]), include_blank: true  %>
<br></br>

<%= f.label :workout_id %>

<%= render partial: "layouts/errors", locals: { object: @circuit } %>

<%= f.collection_select :workout_id, Workout.all, :id, :title %>
<br></br>
<% if @exercise %>
<p> Exercise: <%= @exercise.name %></p>
<%= f.hidden_field :exercise_id %>
<% else %>
<%= f.label :exercise_id %>
<%= f.collection_select :exercise_id, Exercise.all, :id, :name, include_blank: true %>

<h2>Or Create A New Exercise</h2>
<%= f.fields_for :exercise do |e| %>
    <%= e.label :name %>
    <%= e.text_field :name %>
      <br></br>
  
    <%= e.label :category %>
    <%= e.select :category,options_for_select(["arms", "core", "legs", "cardio", "weights", "other"]), include_blank: true  %>
      <br></br>
  
    <%= e.label :reps %>
    <%= e.number_field :reps, min: 0 %>

   
    <%= e.hidden_field :user_id, value: current_user.id %>

    <% end %>
    <% end %>
    <br></br>
    <%= f.submit%>
<% end %>

</div>
