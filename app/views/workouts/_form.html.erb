<%= form_for @workout do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br></br>
  
    <%= f.label :circuits, "Number of Circuits" %>
    <%= f.number_field :circuits, min: 0 %>
    <br></br>
  
    <%= f.label :category %>
    <%= f.select :category,options_for_select(["run", "swim", "bike", "triathalon", "other"]), include_blank: true %>
  
      <br></br>
  
    <%= f.submit%>
  
  <% end %>